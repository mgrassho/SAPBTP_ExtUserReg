{
    "name": "ExtUserReg",
    "version": "1.0.0",
    "description": "External User Registration",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^2.7.1",
        "@sap-cloud-sdk/util": "^2.7.1",
        "@sap/cds": ">=5",
        "@sap/xsenv": "^3.3.2",
