            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                }
            },
            "db": {
                "kind": "sql"
            },
            "uaa": {
                "kind": "xsuaa"
            }
            
        },
        "appconfig": {
            "ORIGIN": "XXXXXX.accounts400.ondemand.",
            "IASService": "https://XXXXXX.accounts400.ondemand.com",
